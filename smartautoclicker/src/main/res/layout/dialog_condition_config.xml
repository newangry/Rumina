<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_dialog_navigation_top_bar"
        android:id="@+id/layout_top_bar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/margin_vertical_large"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:layout_gravity="center">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/edit_name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_horizontal_default"
                android:layout_marginVertical="@dimen/margin_horizontal_default"
                app:endIconMode="clear_text"
                android:hint="@string/dialog_event_config_name_title">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_name_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="My cool condition name"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_horizontal_default"
                android:layout_marginBottom="@dimen/margin_vertical_large">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_horizontal_default"
                    android:layout_marginVertical="@dimen/margin_vertical_large"
                    android:orientation="vertical">

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/AppTheme.TextAppearance.Header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/dialog_condition_detection_details_title"
                        android:labelFor="@+id/edit_name"/>

                    <ImageView
                        android:id="@+id/image_condition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_vertical_small"
                        android:layout_marginBottom="@dimen/margin_vertical_small"
                        android:maxWidth="@dimen/dialog_condition_max_width"
                        android:maxHeight="@dimen/dialog_condition_max_height"
                        android:adjustViewBounds="true"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="fitCenter"
                        android:contentDescription="@string/content_desc_image_condition"
                        tools:layout_width="150dp"
                        tools:src="@drawable/ic_click"/>

                    <include layout="@layout/include_toggle_button"
                        android:id="@+id/condition_detection_type_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_vertical_large"/>

                    <include layout="@layout/include_toggle_button"
                        android:id="@+id/condition_should_appear_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_vertical_large"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_horizontal_default">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_horizontal_default"
                    android:layout_marginVertical="@dimen/margin_vertical_large"
                    android:orientation="vertical">

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/AppTheme.TextAppearance.Header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/dialog_condition_threshold_title"/>

                    <TextView
                        android:id="@+id/text_diff_threshold"
                        style="@style/ItemView.Small"
                        android:layout_marginStart="@dimen/margin_horizontal_small"
                        android:layout_marginEnd="@dimen/margin_horizontal_small"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/text_size_list_item_text"
                        android:text="@string/dialog_condition_threshold_value"
                        tools:text="Value: 12%"/>

                    <com.google.android.material.slider.Slider
                        android:id="@+id/seekbar_diff_threshold"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/item_height"
                        android:layout_marginStart="@dimen/margin_horizontal_small"
                        android:layout_marginEnd="@dimen/margin_horizontal_small"
                        app:labelBehavior="gone"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>
