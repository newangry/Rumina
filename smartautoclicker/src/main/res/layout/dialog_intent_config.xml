<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_dialog_navigation_top_bar"
        android:id="@+id/layout_top_bar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="@dimen/margin_vertical_large"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_horizontal_default"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/edit_name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/margin_horizontal_default"
                android:hint="@string/dialog_event_config_name_title"
                app:endIconMode="clear_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_name_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="My cool intent name" />

            </com.google.android.material.textfield.TextInputLayout>

            <include layout="@layout/include_intent_config_simple"
                android:id="@+id/simple_layout"
                tools:visibility="gone"/>

            <include layout="@layout/include_intent_config_advanced"
                android:id="@+id/advanced_layout"
                tools:visibility="visible"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/configuration_type_button_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_vertical_default"
        android:layout_gravity="center"
        app:singleSelection="true"
        app:selectionRequired="true">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/simple_configuration_button"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_action_config_intent_config_type_simple" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/advanced_configuration_button"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_action_config_intent_config_type_advanced" />

    </com.google.android.material.button.MaterialButtonToggleGroup>

</LinearLayout>