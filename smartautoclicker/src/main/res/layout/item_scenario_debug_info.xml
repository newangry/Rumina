<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        style="@style/HeaderTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Scenario name" />

    <include layout="@layout/include_view_separator"/>

    <!-- Total duration -->
    <include
        android:id="@+id/duration_root"
        layout="@layout/merge_debug_info"/>
    <include layout="@layout/include_view_separator"/>

    <!-- Image processed count -->
    <include
        android:id="@+id/img_proc_count_root"
        layout="@layout/merge_debug_info"/>
    <include layout="@layout/include_view_separator"/>

    <!-- Average image processing duration -->
    <include
        android:id="@+id/avg_img_proc_dur_root"
        layout="@layout/merge_debug_info"/>
    <include layout="@layout/include_view_separator"/>

    <!-- Events trigger count -->
    <include
        android:id="@+id/evt_trigger_count_root"
        layout="@layout/merge_debug_info"/>
    <include layout="@layout/include_view_separator"/>

    <!-- Conditions trigger count -->
    <include
        android:id="@+id/cond_trigger_count_root"
        layout="@layout/merge_debug_info"/>

    <TextView
        style="@style/HeaderTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialog_debug_report_event_list" />

</LinearLayout>