<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_horizontal_default"
            android:layout_marginVertical="@dimen/margin_vertical_large"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                style="@style/AppTheme.TextAppearance.Header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dialog_action_config_intent_advanced_send_type_title"
                android:labelFor="@+id/edit_name"/>

            <include layout="@layout/include_toggle_button"
                android:id="@+id/intent_sending_type_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_vertical_large"
                android:layout_marginBottom="@dimen/margin_vertical_large"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edit_action_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/margin_horizontal_default"
        android:hint="@string/dialog_action_config_intent_advanced_action_title"
        app:endIconMode="clear_text">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_action_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="com.buzbuz.smartautoclicker.ACTION_MAIN" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edit_flags_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_horizontal_default"
        android:hint="@string/dialog_action_config_intent_advanced_flags_title"
        app:endIconMode="clear_text">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_flags_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="1487" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edit_component_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_horizontal_default"
        android:hint="@string/dialog_action_config_intent_advanced_comp_name_title"
        app:endIconMode="clear_text">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_component_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="com.buzbuz.smartautoclicker/.MainActivity" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/extras_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_vertical_large">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_horizontal_default"
            android:layout_marginVertical="@dimen/margin_vertical_large"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/extras_title"
                style="@style/AppTheme.TextAppearance.Header"
                android:text="@string/dialog_action_config_intent_advanced_extras_title"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/extras_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:scrollbars="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="1"
                tools:listitem="@layout/item_end_condition_card"
                tools:visibility="visible"/>

            <include layout="@layout/include_create_copy_buttons"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
