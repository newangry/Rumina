<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_horizontal_small"
    android:layout_marginEnd="@dimen/margin_horizontal_small"
    android:layout_marginTop="@dimen/margin_vertical_large"
    android:layout_marginBottom="@dimen/margin_vertical_large"
    style="@style/HeaderCardView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            style="@style/HeaderTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Event name" />

        <include layout="@layout/include_view_separator"/>

        <!-- Trigger count -->
        <include
            android:id="@+id/trigger_count_root"
            layout="@layout/merge_debug_info"/>
        <include layout="@layout/include_view_separator"/>

        <!-- Processing count -->
        <include
            android:id="@+id/processed_count_root"
            layout="@layout/merge_debug_info"/>
        <include layout="@layout/include_view_separator"/>

        <!-- Processing timing -->
        <include
            android:id="@+id/processing_timing_root"
            layout="@layout/merge_debug_timing"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>