<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_dialog_navigation_top_bar"
        android:id="@+id/layout_top_bar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_horizontal_default"
            android:orientation="vertical">

            <include layout="@layout/include_input_field_text"
                android:id="@+id/edit_key_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dropdown_one_line_helper_text_height"
                android:layout_marginVertical="@dimen/margin_horizontal_default"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_horizontal_default"
                    android:layout_marginVertical="@dimen/margin_vertical_large"
                    android:orientation="vertical">

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/AppTheme.TextAppearance.Header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/dialog_action_config_intent_advanced_extras_config_value"
                        android:labelFor="@+id/edit_name"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_select_type"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/dialog_action_config_intent_advanced_extras_config_value_type_none"
                        tools:visibility="gone"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/text_value_type"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/item_height_big"
                        android:paddingStart="@dimen/margin_horizontal_default"
                        android:paddingEnd="@dimen/margin_horizontal_default"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/text_size_list_item_text_big"
                        android:drawablePadding="@dimen/margin_horizontal_small"
                        app:drawableEndCompat="@drawable/ic_chevron"
                        tools:text="Integer"/>

                    <FrameLayout
                        android:id="@+id/layout_value_input"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/item_height_big"
                        android:layout_marginTop="@dimen/margin_vertical_default">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/edit_value_layout"
                            style="?attr/textInputFilledStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            app:endIconMode="clear_text"
                            tools:visibility="visible">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edit_value_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                tools:text="19875620" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.button.MaterialButtonToggleGroup
                            android:id="@+id/boolean_value_button_group"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            app:singleSelection="true"
                            app:selectionRequired="true"
                            tools:visibility="gone">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/true_button"
                                style="?attr/materialButtonOutlinedStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/dialog_button_intent_extra_boolean_true" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/false_button"
                                style="?attr/materialButtonOutlinedStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/dialog_button_intent_extra_boolean_false" />

                        </com.google.android.material.button.MaterialButtonToggleGroup>

                    </FrameLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>

