<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/margin_vertical_default"
    android:layout_marginBottom="@dimen/margin_vertical_default"
    android:orientation="vertical">

    <CheckedTextView
        android:id="@+id/debug_view_toggle"
        style="@style/ItemView.Small"
        android:paddingStart="@dimen/margin_horizontal_default"
        android:paddingEnd="@dimen/margin_horizontal_large"
        android:gravity="center_vertical"
        android:text="@string/dialog_debug_config_show_view"
        android:textSize="@dimen/text_size_list_item_text"
        android:background="@android:color/transparent"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"/>

    <include layout="@layout/include_view_separator"/>

    <CheckedTextView
        android:id="@+id/debug_report_toggle"
        style="@style/ItemView.Small"
        android:paddingStart="@dimen/margin_horizontal_default"
        android:paddingEnd="@dimen/margin_horizontal_large"
        android:gravity="center_vertical"
        android:text="@string/dialog_debug_config_generate_report"
        android:textSize="@dimen/text_size_list_item_text"
        android:background="@android:color/transparent"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"/>

    <include layout="@layout/include_view_separator"/>

</LinearLayout>