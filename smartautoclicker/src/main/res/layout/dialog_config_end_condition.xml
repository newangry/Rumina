<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/include_dialog_navigation_top_bar"
        android:id="@+id/layout_top_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/layout_content"
        app:layout_constraintVertical_chainStyle="spread_inside"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/layout_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_top_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_horizontal_default"
            android:layout_marginVertical="@dimen/margin_vertical_large"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/event_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/execution_count_layout"
                app:layout_constraintBottom_toTopOf="@id/end_conditions_card">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_horizontal_default"
                    android:layout_marginVertical="@dimen/margin_vertical_large">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/event_title"
                        style="@style/AppTheme.TextAppearance.Header"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:text="@string/dialog_end_condition_config_event_title" />

                    <include
                        android:id="@+id/include_selected_event"
                        layout="@layout/item_event"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/item_height_big"
                        android:layout_marginTop="@dimen/margin_vertical_large"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/event_title"
                        app:layout_constraintBottom_toBottomOf="parent"
                        tools:visibility="visible"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/event_empty"
                        style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_vertical_large"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/event_title"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="@string/dialog_end_condition_config_event_no_selection"
                        android:textAlignment="center"
                        tools:visibility="gone"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/event_none"
                        style="@style/TextAppearance.Material3.BodyLarge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_vertical_large"
                        android:layout_marginBottom="@dimen/margin_vertical_default"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/event_title"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="@string/dialog_end_condition_config_event_none_in_scenario"
                        android:textAlignment="center"
                        tools:visibility="gone"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/execution_count_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_vertical_large"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/detection_quality_card"
                app:endIconMode="clear_text"
                android:hint="@string/dialog_end_condition_config_executions_title">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/execution_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:importantForAutofill="no"
                    tools:text="3"/>

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
